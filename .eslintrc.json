{
  "extends": "next/core-web-vitals",
  "rules": {
    "indent": [
        "warn",
        2
    ],
    "linebreak-style": [
        "warn",
        "unix"
    ],
    "quotes": [
        "warn",
        "single", 
        {"allowTemplateLiterals": true}
    ],
    "semi": [
        "warn",
        "always"
    ],
    "no-unused-expressions": [
        "error",
        {
          "allowShortCircuit": true,
          "allowTernary": true,
          "allowTaggedTemplates": true
        }
      ],
      "no-empty": "warn",
      "no-unused-vars": "warn"
}
}
